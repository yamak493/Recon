<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.enabify</groupId>
  <artifactId>Recon</artifactId>
  <name>Recon</name>
  <version>1.4-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <relocations>
            <relocation>
              <pattern>org.bstats</pattern>
              <shadedPattern>net.enabify.recon.org.bstats</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>bukkit</id>
      <build>
        <resources>
          <resource>
            <filtering>true</filtering>
            <directory>src/main/resources</directory>
            <excludes>
              <exclude>bungee.yml</exclude>
              <exclude>velocity-plugin.json</exclude>
            </excludes>
          </resource>
        </resources>
        <finalName>Recon-Bukkit-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
              <source>${common.java.version}</source>
              <target>${common.java.version}</target>
              <excludes>
                <exclude>net/enabify/recon/proxy/**</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>bungee</id>
      <build>
        <resources>
          <resource>
            <filtering>true</filtering>
            <directory>src/main/resources</directory>
            <excludes>
              <exclude>plugin.yml</exclude>
              <exclude>velocity-plugin.json</exclude>
            </excludes>
          </resource>
        </resources>
        <finalName>Recon-Bungee-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
              <source>${common.java.version}</source>
              <target>${common.java.version}</target>
              <includes>
                <include>net/enabify/recon/proxy/bungeecord/**</include>
                <include>net/enabify/recon/proxy/common/**</include>
                <include>net/enabify/recon/command/**</include>
                <include>net/enabify/recon/config/**</include>
                <include>net/enabify/recon/crypto/**</include>
                <include>net/enabify/recon/execution/**</include>
                <include>net/enabify/recon/http/**</include>
                <include>net/enabify/recon/logging/**</include>
                <include>net/enabify/recon/messaging/**</include>
                <include>net/enabify/recon/model/**</include>
                <include>net/enabify/recon/platform/**</include>
                <include>net/enabify/recon/util/**</include>
              </includes>
              <excludes>
                <exclude>net/enabify/recon/Recon.java</exclude>
                <exclude>net/enabify/recon/listener/PlayerJoinListener.java</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>velocity</id>
      <build>
        <resources>
          <resource>
            <filtering>true</filtering>
            <directory>src/main/resources</directory>
            <excludes>
              <exclude>plugin.yml</exclude>
              <exclude>bungee.yml</exclude>
            </excludes>
          </resource>
        </resources>
        <finalName>Recon-Velocity-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
              <source>${velocity.java.version}</source>
              <target>${velocity.java.version}</target>
              <includes>
                <include>net/enabify/recon/proxy/velocity/**</include>
                <include>net/enabify/recon/proxy/common/**</include>
                <include>net/enabify/recon/command/**</include>
                <include>net/enabify/recon/config/**</include>
                <include>net/enabify/recon/crypto/**</include>
                <include>net/enabify/recon/execution/**</include>
                <include>net/enabify/recon/http/**</include>
                <include>net/enabify/recon/logging/**</include>
                <include>net/enabify/recon/messaging/**</include>
                <include>net/enabify/recon/model/**</include>
                <include>net/enabify/recon/platform/**</include>
                <include>net/enabify/recon/util/**</include>
              </includes>
              <excludes>
                <exclude>net/enabify/recon/Recon.java</exclude>
                <exclude>net/enabify/recon/listener/PlayerJoinListener.java</exclude>
              </excludes>
              <annotationProcessorPaths>
                <path>
                  <groupId>com.velocitypowered</groupId>
                  <artifactId>velocity-api</artifactId>
                  <version>3.5.0-SNAPSHOT</version>
                </path>
              </annotationProcessorPaths>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>spigotmc-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>sonatype</id>
      <url>https://oss.sonatype.org/content/groups/public/</url>
    </repository>
    <repository>
      <id>papermc</id>
      <url>https://repo.papermc.io/repository/maven-public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.13-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>2.8.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>io.netty</groupId>
      <artifactId>netty-all</artifactId>
      <version>4.1.24.Final</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.md-5</groupId>
      <artifactId>bungeecord-api</artifactId>
      <version>1.21-R0.4-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.velocitypowered</groupId>
      <artifactId>velocity-api</artifactId>
      <version>3.5.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.yaml</groupId>
      <artifactId>snakeyaml</artifactId>
      <version>2.2</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <velocity.java.version>17</velocity.java.version>
    <common.java.version>11</common.java.version>
  </properties>
</project>
